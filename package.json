{
  "name": "onchain-tipjar",
  "version": "1.0.0",
  "description": "A Web3 tip jar application built on Base Sepolia testnet",
  "main": "index.js",
  "scripts": {
    "dev": "npm run frontend",
    "compile": "npx hardhat compile",
    "deploy": "npx hardhat run scripts/deploy.js --network baseSepolia",
    "deploy:local": "npx hardhat run scripts/deploy.js --network localhost",
    "test": "npx hardhat test",
    "node": "npx hardhat node",
    "frontend": "cd frontend && python -m http.server 8000 || python3 -m http.server 8000"
  },
  "keywords": [
    "web3",
    "ethereum",
    "base",
    "tipjar",
    "solidity",
    "hardhat",
    "dapp"
  ],
  "author": "Web3 Developer",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "hardhat": "^2.17.1"
  },
  "dependencies": {
    "dotenv": "^16.3.1"
  }
}